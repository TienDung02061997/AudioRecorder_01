<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.HomeFragment">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="@dimen/width_162"
        android:layout_height="@dimen/height_188"
        android:layout_marginStart="@dimen/marginStart_8"
        android:layout_marginTop="@dimen/margintop_60"
        android:layout_marginEnd="@dimen/marginEnd_8"
        android:src="@drawable/ic_mic_black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/textTime"
        android:layout_width="@dimen/width_162"
        android:layout_height="@dimen/height_50"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:text="@string/time"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/textsize_40"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.557"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        tools:ignore="MissingConstraints" />

    <ImageButton
        android:id="@+id/imagebutton_ListAudioRecover"
        android:layout_width="@dimen/width_62"
        android:layout_height="@dimen/height_62"
        android:layout_marginTop="@dimen/margintop_48"
        android:layout_marginStart="@dimen/marginstart_40"
        android:background="@drawable/btn_list_audio_recover"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.055"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textTime"
        tools:ignore="MissingConstraints"/>

    <ImageButton
        android:id="@+id/imagebutton_stop"
        android:layout_width="@dimen/width_62"
        android:layout_height="@dimen/height_62"
        android:layout_marginTop="@dimen/margintop_48"
        android:layout_marginEnd="@dimen/marginend_48"
        android:background="@drawable/btn_stop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.972"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textTime" />

    <ImageButton
        android:id="@+id/imagebutton_play"
        android:layout_width="@dimen/width_62"
        android:layout_height="@dimen/height_62"
        android:layout_marginTop="@dimen/margintop_48"
        android:background="@drawable/btn_play"
        app:layout_constraintEnd_toStartOf="@+id/imagebutton_stop"
        app:layout_constraintStart_toEndOf="@+id/imagebutton_ListAudioRecover"
        app:layout_constraintTop_toBottomOf="@+id/textTime"
        tools:ignore="MissingConstraints" />
</android.support.constraint.ConstraintLayout>
